@model FaturaItem

@{
    ViewData["Title"] = "Novo Item da Fatura";
}

<div class="container mt-4">
    <h2 class="text-center">Adicionar Item à Fatura</h2>

    <form asp-action="CreateItem" method="post">
        <input type="hidden" asp-for="FaturaId" />
        
        <div class="form-group">
            <label>Ordem</label>
            <input asp-for="Ordem" class="form-control" placeholder="Ex: 10, 20, 30" />
            <span asp-validation-for="Ordem" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Descrição</label>
            <input asp-for="Descricao" class="form-control" placeholder="Descrição breve" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Valor</label>
            <input asp-for="Valor" class="form-control" placeholder="Ex: 100.00" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Adicionar Item</button>
        <a href="/Fatura/Details/@Model.FaturaId" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>
