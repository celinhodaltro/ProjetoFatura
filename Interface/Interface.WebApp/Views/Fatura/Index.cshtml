@model FaturasViewModel

@{
    ViewData["Title"] = "Lista de Faturas";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>Lista de Faturas</h2>
        </div>

        <div class="card-body">
            <form id="filterForm" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <label for="Cliente">Cliente</label>
                        <input type="text" id="Cliente" name="Cliente" class="form-control" value="@Model.Filter.Cliente" placeholder="Filtrar por Cliente">
                    </div>
                    <div class="col-md-3">
                        <label for="DateInitial">Data Inicial</label>
                        <input type="date" id="DateInitial" name="DateInitial" class="form-control" value="@Model.Filter.DateInitial?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label for="DateFinish">Data Final</label>
                        <input type="date" id="DateFinish" name="DateFinish" class="form-control" value="@Model.Filter.DateFinish?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Aplicar Filtros</button>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-hover mt-3">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fatura in Model.Faturas)
                    {
                        <tr>
                            <td>@fatura.Id</td>
                            <td>@fatura.Cliente</td>
                            <td>@fatura.Data.ToShortDateString()</td>
                            <td class="text-center">
                                <a href="/Fatura/Details/@fatura.Id" class="btn btn-info btn-sm mx-1">Visualizar</a>
                                <a href="/Fatura/Edit/@fatura.Id" class="btn btn-warning btn-sm mx-1">Editar</a>
                                <form action="@Url.Action("Delete", "Fatura", new { id = fatura.Id })" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm mx-1">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Filter.Page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { Page = i, Model.Filter.Cliente, Model.Filter.DateInitial, Model.Filter.DateFinish })">@i</a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="d-flex justify-content-end">
                <a href="/Fatura/Create" class="btn btn-primary mt-3">Adicionar Nova Fatura</a>
            </div>
        </div>
    </div>
</div>
